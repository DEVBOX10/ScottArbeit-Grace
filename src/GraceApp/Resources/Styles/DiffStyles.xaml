<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GraceApp.DiffStyles">
    <Style x:Key="HeaderStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="FontSize" Value="16" />
    </Style>
    <Style x:Key="DiffStyle" TargetType="Span">
        <Setter Property="FontFamily" Value="Courier New" />
        <Setter Property="FontSize" Value="14" />
    </Style>
    <Style x:Key="DeletedStyle" BasedOn="{StaticResource DiffStyle}" TargetType="Span">
        <Setter Property="TextColor" Value="Red" />
    </Style>
    <Style x:Key="AddedStyle" BasedOn="{StaticResource DiffStyle}" TargetType="Span">
        <Setter Property="TextColor" Value="DarkGreen" />
    </Style>
    <Style x:Key="ChangedStyle" BasedOn="{StaticResource DiffStyle}" TargetType="Span">
        <Setter Property="TextColor" Value="Purple" />
    </Style>
    <Style x:Key="DeemphasizedStyle" BasedOn="{StaticResource DiffStyle}" TargetType="Span">
        <Setter Property="TextColor" Value="DimGray" />
    </Style>
    <Style x:Key="UnchangedStyle" BasedOn="{StaticResource DiffStyle}" TargetType="Span">
        <Setter Property="TextColor" Value="WhiteSmoke" />
    </Style>
</ResourceDictionary>